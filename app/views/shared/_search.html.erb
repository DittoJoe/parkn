    <div class="search-bar">
      <%= form_tag parks_path, method: :get do %>
        <div style="float:left; width: 50%; opacity: 0.4;">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a park"
          %>
           </div>
       <div style="float:left;"><%= submit_tag "Search", class: "btn btn-primary" %></div>
      <% end %>
    </div>
