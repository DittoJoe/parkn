<style>
@import url('https://fonts.googleapis.com/css2?family=Amatic+SC&display=swap');
</style>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <h1 class="parkn">Park<strong>N</strong></h1>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Explore", parks_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.avatar.attached? %>
          <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
          <%= image_tag "https://scontent.fbma2-1.fna.fbcdn.net/v/t1.6435-9/31698866_1611413038977645_5871834160422715392_n.jpg?_nc_cat=110&ccb=1-3&_nc_sid=174925&_nc_ohc=8fZsTQDQim0AX-2iP-j&tn=UpBPgHWCEfy415-U&_nc_ht=scontent.fbma2-1.fna&oh=66e0828f87ca2185f4b43c0ce8900f63&oe=60DD98A5", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Add a park", new_park_path, class: "dropdown-item" %>
            <%= link_to "My Parks", bookmarks_path(@bokmarks), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

