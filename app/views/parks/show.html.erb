<div class="container text-center pt-3">
  <h1><%= @park.name %></h1>
</div>
<div class="show-container">
  <div class="card-show">
    <% if @park.photos.attached? %>
      <%= cl_image_tag @park.photos.first.key %>
    <% else %>
      <img src="https://quickbutik.imgix.net/4582H/products/5bbc97e2b880c.png" />
    <% end %>
    <div class="card-show-infos">
      <div class="emoji-cards">
        <% @categories.each do |cat| %>
          <div class="emoji-card">
            <h3 class="emoji"><i class="fas fa-<%= cat.emoji %>"></i></h3>
            <div class="line"></div>
            <h3 class="score">0</h3>
          </div>
        <% end %>
      </div>
      <div>
        <h3><%= @park.details %></h3>
      </div>
    </div>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>


