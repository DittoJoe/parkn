<div class="show-container">
  <div class="card-trip">
    <% if @park.photos.attached? %>
      <%= cl_image_tag @park.photos.first.key %>
    <% else %>
      <img src="https://quickbutik.imgix.net/4582H/products/5bbc97e2b880c.png" />
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2 class="park"><%= @park.name %></h2>
        <h3><%= @park.details %></h3>
      </div>
      <%= cl_image_tag '11276241_890671564313185_1851098347_n.jpg_fb3oxk', class: "card-trip-user avatar-bordered" %>
    </div>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
