<div class="srch"><%= render 'shared/search' %></div>
<div class="show-container">
  <div class="cards-index">
    <% @parks.each do |park| %>
      <%= link_to park_path(park) do %>
        <div class="card-park">
          <%= cl_image_tag park.photos.first.key if park.photos.attached? %>
            <div class="card-park-infos">
              <div><h2><%= park.name %></h2></div>
              <p class="card-park-region"> <%= park.region %></p>
            </div>
         </div>
      <% end %>
    <% end %>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

