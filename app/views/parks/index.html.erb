<div class="srch d-flex">
  <%= render 'shared/search' %>
  <div class="search-bar">
    <%= form_tag parks_path, method: :get do %>
      <div class="d-flex search_bar">
      <%= select_tag :sorting, options_for_select(["Alphabetical", "Rating"]),
        class: "form-control"
      %>
    <%= submit_tag "Filter", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>
<div class="show-container">
  <div class="cards-index">
    <% @parks.each do |park| %>
      <%= link_to park_path(park) do %>
        <div class="card-park">
          <% if park.photos.attached? %>
            <%= cl_image_tag park.photos.first.key %>
          <% else %>
            <%= cl_image_tag park.key %>
          <% end %>
            <div class="card-park-infos">
              <% @rating = park.calculate_average %>
              <%= render 'rating' %>
              <h2><%= park.name %></h2>
              <p class="card-park-region"> <%= park.region %></p>
            </div>
         </div>
      <% end %>
    <% end %>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>




