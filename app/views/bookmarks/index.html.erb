
<div class="items d-flex">
    <div class="card-fav">
      <img src="https://scontent.fbma2-1.fna.fbcdn.net/v/t1.6435-9/31698866_1611413038977645_5871834160422715392_n.jpg?_nc_cat=110&ccb=1-3&_nc_sid=174925&_nc_ohc=8fZsTQDQim0AX-2iP-j&tn=UpBPgHWCEfy415-U&_nc_ht=scontent.fbma2-1.fna&oh=66e0828f87ca2185f4b43c0ce8900f63&oe=60DD98A5" alt="Cristina" style="width:100%">
      <h1>Cristina Salazar</h1>
      <p class="title">My favorite parks</p>
    </div>

    <div class="cards-index fav-park">
      <% @bookmarks.each do |bookmark| %>
        <div class="card-park card-park-fav">
          <%= cl_image_tag bookmark.park.photos.first.key if bookmark.park.photos.attached? %>
          <div class="card-park-infos">
            <div>
              <%=link_to bookmark.park.name, park_path(bookmark.park) %>
            </div>
             <div data-controller="like" data-like-target="link" data-park="<%= bookmark.park.id %>" data-bookmark="<%= Bookmark.find_by(user: current_user, park: bookmark.park).id if Bookmark.find_by(user: current_user, park: bookmark.park)%>">
                  <%= link_to bookmark_path(Bookmark.find_by(user: current_user, park: bookmark.park)), method: "delete", data: { action: "click->like#delete"}, bookmark: Bookmark.find_by(user: current_user, park: bookmark.park.id) do %>
                    <i class="fas fa-heart heart"></i>
                <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>



